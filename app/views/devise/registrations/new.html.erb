<h2>Registrar</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "user") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user", placeholder: "Ingresar Email" %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(Minimo <%= @minimum_password_length %> Caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-user", placeholder: "ingresar ContraseÃ±a" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-user", placeholder: "Confirmar contraseÃ±a" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-primary btn-user btn-block" %>
  </div>
<% end %>

