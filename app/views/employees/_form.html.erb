<%= form_for @employee, remote: true do |f| %>
  <div class="form-group">
    <h4 class="control-label">Datos de los empleados: </h4>
  </div>

  <div class="item form-group<%= @employee.errors[:name].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :name, "Nombre: " %>
    <div class="input-group">
      <%= f.text_field :name, {:class => "form-control", :placeholder => "Introduzca el nombre del empleado"} %>
      <%if @employee.errors[:name].any? %>
        <p class="bg-danger"><%= @employee.errors[:name].to_s[/\w([^"]*)/] %></p>
        <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:last_name].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :last_name, "Apellido: " %>
    <div class="input-group">
      <%= f.text_field :last_name, {:class => "form-control", :placeholder => "Introduzca el apellido del empleado"} %>
      <%if @employee.errors[:last_name].any? %>
        <p class="bg-danger"><%= @employee.errors[:last_name].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:document_type].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :document_type, "Typo de documento: " %>
    <div class="input-group">
      <%= f.select(:document_type, options_for_select([['CC', 1], ['CE', 2], ['TI', 3], ['PA', 4]]), {include_blank: 'Seleccionar'}, {class: "form-control"}) %>
      <%if @employee.errors[:document_type].any? %>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:blood_type].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :blood_type, "Typo de sangre: " %>
    <div class="input-group">
      <%= f.text_field :document_type, {:class => "form-control", :placeholder => "Introduzca el tipo sangre del empleado"} %>
      <%if @employee.errors[:document_type].any? %>
        <p class="bg-danger"><%= @employee.errors[:document_type].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:gender].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :gender, "Genero: " %>
    <div class="input-group">
      <%= f.select(:gender, options_for_select([['Masculino', 1], ['Femenino', 2]]), {include_blank: 'Seleccionar'}, {class: "form-control"}) %>
      <%if @employee.errors[:gender].any? %>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:position].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :position, "Cargo: " %>
    <div class="input-group">
      <%= f.text_field :position, {:class => "form-control", :placeholder => "Introduzca el cargo del empleado"} %>
      <%if @employee.errors[:position].any? %>
        <p class="bg-danger"><%= @employee.errors[:position].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:campus].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :campus, "Sede: " %>
    <div class="input-group">
      <%= f.text_field :campus, {:class => "form-control", :placeholder => "Introduzca la sede del empleado"} %>
      <%if @employee.errors[:campus].any? %>
        <p class="bg-danger"><%= @employee.errors[:campus].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:email].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :email, "Email: " %>
    <div class="input-group">
      <%= f.text_field :email, {:class => "form-control", :placeholder => "Introduzca el email del empleado"} %>
      <%if @employee.errors[:campus].any? %>
        <p class="bg-danger"><%= @employee.errors[:email].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

<!--  <div class="item form-group<%#= @employee.errors[:admin].any? ? ' has-error has-feedback' : '' %>">-->
    <%#= f.label :admin, "Admin: " %>
<!--    <div class="input-group">-->
      <%#= f.text_field :admin, {:class => "form-control", :placeholder => "Introduzca si el empleado va hacer administrador"} %>
      <%#if @employee.errors[:admin].any? %>
<!--        <p class="bg-danger"><%#= @employee.errors[:admin].to_s[/\w([^"]*)/] %></p>-->
      <%# end %>
<!--    </div>-->
<!--  </div>-->

  <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
    <%= f.submit @employee.new_record? ? "Crear Empleado" : "Actualizar Empleado", :class => "btn btn-success" %>
  </div>
<% end %>