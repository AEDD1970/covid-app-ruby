<%= form_for @employee, remote: true do |f| %>
  <div class="form-group">
    <h4 class="control-label">Datos del empleado: </h4>
  </div>

  <div class="item form-group<%= @employee.errors[:document_number].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :document_number, "Documento de Identidad: " %>
    <div class="input-group">
      <%= f.number_field :document_number, {:class => "form-control", :placeholder => "Ingrese numero de documento", required:'true'} %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:name].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :name, "Nombre: " %>
    <div class="input-group">
      <%= f.text_field :name, {:class => "form-control", :placeholder => "Ingrese nombre", style: 'text-transform: capitalize;', required:'true'} %>
      <%if @employee.errors[:name].any? %>
        <p class="bg-danger"><%= @employee.errors[:name].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:organizational_unit].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :organizational_unit, "Unidad Organizativa: " %>
    <div class="input-group">
      <%= f.text_field :organizational_unit, {:class => "form-control", :placeholder => "Ingrese la Unidad Organizativa", style: 'text-transform: capitalize;', required:'true'} %>
      <%if @employee.errors[:organizational_unit].any? %>
        <p class="bg-danger"><%= @employee.errors[:organizational_unit].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:position].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :position, "Cargo: " %>
    <div class="input-group">
      <%= f.text_field :position, {:class => "form-control", :placeholder => "Ingrese cargo", style: 'text-transform: capitalize;', required:'true'} %>
      <%if @employee.errors[:position].any? %>
        <p class="bg-danger"><%= @employee.errors[:position].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:gender_id].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :gender_id, "Genero: " %>
    <div class="input-group">
      <%= f.collection_select :gender_id, Gender.all, :id, :description, { :prompt => "Seleccionar" }, { :class => "form-control"  }%>
      <%if @employee.errors[:gender_id].any? %>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:eps].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :eps, "EPS: " %>
    <div class="input-group">
      <%= f.text_field :eps, {:class => "form-control", :placeholder => "Ingrese EPS", style: 'text-transform: capitalize;', required:'true'} %>
      <%if @employee.errors[:eps].any? %>
        <p class="bg-danger"><%= @employee.errors[:eps].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:age].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :age, "Edad: " %>
    <div class="input-group">
      <%= f.number_field :age, {:class => "form-control", :placeholder => "Ingrese edad", required:'true'} %>
    </div>
  </div>


  <div class="item form-group<%= @employee.errors[:blood_type].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :blood_type, "Tipo de Sangre: " %>
    <div class="input-group">
      <%= f.text_field :blood_type, {:class => "form-control", :placeholder => "Ingrese tipo sangre", style: 'text-transform: capitalize;', required:'true'} %>
      <%if @employee.errors[:blood_type].any? %>
        <p class="bg-danger"><%= @employee.errors[:blood_type].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:phone].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :phone, "Teléfono de Contacto: " %>
    <div class="input-group">
      <%= f.number_field :phone, {:class => "form-control", :placeholder => "Ingrese teléfono de contacto", required:'true'} %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:emergency_number].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :emergency_number, "Teléfono en Caso de Emergencia: " %>
    <div class="input-group">
      <%= f.number_field :emergency_number, {:class => "form-control", :placeholder => "Ingrese teléfono de emergencia", required:'true'} %>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:weight].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :weight, "Peso: " %>
    <div class="input-group">
      <%= f.number_field :weight, {:class => "form-control", :placeholder => "Ingrese peso", required:'true'} %>
      <div class="input-group-append">
        <span class="input-group-text">kg</span>
      </div>
    </div>
  </div>

  <div class="item form-group<%= @employee.errors[:size].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :size, "Talla: " %>
    <div class="input-group">
      <%= f.text_field :size, {:class => "form-control", :placeholder => "Ingrese talla"} %>
    </div>
  </div>

  <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
    <%= f.submit @employee.new_record? ? "Crear empleado" : "Actualizar empleado", :class => "btn btn-success", :onclick => "alert('Registro de empleado guardado')"  %>
  </div>
<% end %>