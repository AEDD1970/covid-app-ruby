<div style="align-items: center;
    align-content: center;
    flex-direction: column;
    justify-content: center;
    display: flex; margin-top: 5%"><h5
  class="h3 mb-2 text-gray-800 ">Registro de Empleados
  <h1 class="fas fa-user-friends"></h1>
</h5>
</div>
<h1>Employee</h1>
<%= form_tag(search_employees_path, :method => "get",
             class: 'navbar-form navbar-left') do %>
  <div class="input-group", id="searchEmployee">
    <%= search_field_tag :search, params[:search], placeholder: "Buscar Empleado Por el Numero de Documento", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag "Bustar", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
    </div>
  </div>
<% end %>
<div style="margin-top: 5%">
  <%= link_to new_employee_path, {remote: true, class: "btn btn-info", id: "anadir-employee-btn"} do %>
    <span>Registro</span>
    <% end %>
</div>

<div class="card shadow mb-4" >
  <div class="card-body">
    <div class="table-responsive">
      <table id="tablaEmployees" class="table table-bordered" width="90%">
        <thead>

          <tr>
            <th>Documento de Identidad</th>
            <th>Nombre</th>
            <th>Unidad Organizativa</th>
            <th>Cargo</th>
            <th>Genero</th>
            <th>EPS</th>
            <th>Edad</th>
            <th>Grupo Sanguineo</th>
            <th>Telefono de Contacto</th>
            <th>Telefono en Caso de Emergencia</th>
            <th>Peso</th>
            <th>Talla</th>
            <th>IMC</th>
            <th>Interpretacion</th>
          </tr>
        </thead>
          <tbody>
            <% @employees.each do |emp| %>
              <tr id="employee_<% emp.id %>">
                <td><%= emp.document_number %></td>
                <td><%= emp.name %></td>
                <td><%= emp.organizational_unit %></td>
                <td><%= emp.position %></td>
                <td><%= emp.gender.description %></td>
                <td><%= emp.eps %></td>
                <td><%= emp.age %></td>
                <td><%= emp.blood_type %></td>
                <td><%= emp.phone %></td>
                <td><%= emp.emergency_number %></td>
                <td><%= emp.weight %></td>
                <td><%= emp.size %></td>
                <td><%= emp.imc %></td>
                <td><%= emp.interpretation.description %></td>
                  <td>
                    <%= link_to "Editar", edit_employee_path(emp), html_options = {class: "btn btn-info btn-xs", remote: true}%>
                    <%= link_to "Borrar", emp, remote: true, method: :delete, data: { confirm: "Â¿Estas seguro que quieres borrar el empleado: #{emp.name}?"}, class: "btn btn-danger btn-xs" %>
                  </td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>

<%=render 'modal_employees' %>