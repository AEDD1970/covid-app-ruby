<div>
  <%= link_to new_employee_path, {remote: true, class: "btn btn-info", id: "anadir-employee-btn"} do %>
    <span>Registro</span>
    <% end %>
</div>

<div class="card shadow mb-4" >
  <div class="card-body">
    <div class="table-responsive">
      <table id="tablaEmployees" class="table table-bordered" width="90%">
        <thead>
          <tr>
            <th>Documento de Identidad</th>
            <th>Nombre</th>
            <th>Unidad Organizativa</th>
            <th>Cargo</th>
            <th>Genero</th>
            <th>EPS</th>
            <th>Edad</th>
            <th>Grupo Sanguineo</th>
            <th>Telefono de Contacto</th>
            <th>Telefono en Caso de Emergencia</th>
            <th>Peso</th>
            <th>Talla</th>
            <th>IMC</th>
            <th>Interpretacion</th>
          </tr>
        </thead>
          <tbody>
            <% @employees.each do |emp| %>
              <tr id="employee_<% emp.id %>">
                <td><%= emp.document_number %></td>
                <td><%= emp.name %></td>
                <td><%= emp.organizational_unit %></td>
                <td><%= emp.position %></td>
                <td><%= emp.gender.description %></td>
                <td><%= emp.eps %></td>
                <td><%= emp.age %></td>
                <td><%= emp.blood_type %></td>
                <td><%= emp.phone %></td>
                <td><%= emp.emergency_number %></td>
                <td><%= emp.weight %></td>
                <td><%= emp.size %></td>
                <td><%= emp.imc %></td>
                <td><%= emp.interpretation.description %></td>
                  <td>
                    <%= link_to "Editar", edit_employee_path(emp), html_options = {class: "btn btn-info btn-xs", remote: true}%>
                    <%= link_to "Borrar", emp, remote: true, method: :delete, data: { confirm: "Â¿Estas seguro que quieres borrar el empleado: #{emp.name}?"}, class: "btn btn-danger btn-xs" %>
                  </td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>

<%=render 'modal_employees' %>