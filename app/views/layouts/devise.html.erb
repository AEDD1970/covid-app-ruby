<!DOCTYPE html>
<html lang="en">

<head>
  <title>AppCodHr</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag "sb-admin-2.min" %>
</head>

<body class="bg-gradient-primary">

<div class="container">

  <!-- Outer Row -->
  <div class="row justify-content-center" style="margin-top: 10%">

    <div class="col-xl-12 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 my-5">
        <div class="card-body p-0 shadow-lg" style="box-shadow: black">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-7 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-5" style="background-color: #3a91ce; padding: 5px;">
              <div class="p-5" style="background-color: white;">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Bienvenido</h1>
                </div>
                <%= yield %>
                <hr>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

  </div>
</body>

</html>
