<!DOCTYPE html>
<html>
<head>
  <title>AppCodHr</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag "sb-admin-2.min" %>
</head>

<body id="page-top">
<div id="wrapper">
  <!-- Sidebar -->
  <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

    <!-- Sidebar - Brand -->
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="#">
      <div class="sidebar-brand-icon rotate-n-15">
        <i class="fas fa-virus"></i>
      </div>
      <div class="sidebar-brand-text mx-3">Covid_19</div>
    </a>

    <!-- Divider -->
    <hr class="sidebar-divider my-0">

    <!-- Nav Item - Dashboard -->
    <li class="nav-item active">
      <a class="nav-link" href="/">
        <i class="fas fa-home"></i>
        <span>Inicio</span></a>
    </li>
    <hr class="sidebar-divider">
<!-- loguin user-->

    <li class="nav-item dropdown no-arrow" style="margin-top: -5%">
      <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span style="color: white">Administrador</span>

        <!-- Dropdown - User Information -->
          <%= link_to destroy_user_session_path, method: :delete, html_options: {class: "btn btn-primary"} do %>
            <i style="margin-left: 14px" class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"  ></i>
            <span style="color: white">Cerrar sesion</span>
          <% end %>
      </a>

    </li>
    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Heading -->
    <div class="sidebar-heading">
      IHR INTERACTIVE
    </div>

    <!-- Nav Item - Pages Collapse Menu -->
    <li class="nav-item">

      <a class="nav-link collapsed" href="/employees"  aria-expanded="true" aria-controls="collapseTwo">
        <i class="fas fa-user"></i>
        <span>Empleados</span>
      </a>
    </li>

    <!-- Naw ecuesta entrad-->
    <li class="nav-item">
      <a class="nav-link collapsed" href="/init_surveys" aria-expanded="true" aria-controls="collapseUtilities">
        <i class="fas fa-poll"></i>
        <span>Encuestas de Entrada</span>
      </a>

    </li>
    <!-- Naw ecuesta salida-->
    <li class="nav-item">
      <a class="nav-link collapsed" href="/exit_surveys" aria-expanded="true" aria-controls="collapseUtilities">
        <i class="fas fa-poll-h"></i>
        <span>Encuestas de  Salida</span>
      </a>
    </li>
    <!-- Naw table report -->
    <li class="nav-item">
      <a class="nav-link collapsed" href="#"  aria-expanded="true" aria-controls="collapseUtilities">
        <i class="fas fa fa-clipboard"></i>
        <span>Reportes</span>
      </a>

    </li>

  </ul>
  <!-- End of Sidebar -->
  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!--continually changes with yield -->
        <%= yield %>
      </div>
    </div>
  </div>
</div>
</body>
</html>